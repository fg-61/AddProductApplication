@model RegisterViewModel

@{
    ViewBag.Title = "Kayıt Ol";
}


<div class="text-center">
    <p>
        Üyeliğiniz var mı?
        <a asp-controller="Account" asp-action="Login">
            Giriş için tıklayınız
        </a>
    </p>
</div>
<div class="login-box">
    <h2>Kayıt Ol</h2>
    <form method="post" asp-controller="Account" asp-action="Register">
        <div class="user-box">
            <span asp-validation-for="UserName" class="text-danger"></span>
            <input type="text" asp-for="UserName" required="">
            <label>Kullanıcı Adı</label>
        </div>
        <div class="user-box">
            <span asp-validation-for="Email" class="text-danger"></span>
            <input type="text" asp-for="Email" required="">
            <label>Email</label>
        </div>
        <div class="user-box">
            <span asp-validation-for="Name" class="text-danger"></span>
            <input type="text" asp-for="Name" required="">
            <label>Ad</label>
        </div>
        <div class="user-box">
            <span asp-validation-for="Surname" class="text-danger"></span>
            <input type="text" asp-for="Surname" required="">
            <label>Soyad</label>
        </div>

        <div class="user-box">
            <input type="text" asp-for="Password" required="" />
            <span asp-validation-for="Password" class="text-danger"></span>
            <label>Şifre</label>
        </div>
        <div class="user-box">
            <input type="text" asp-for="ConfirmPassword" required="" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            <label>Şifre Tekrar</label>
        </div>

        <div class="text-center">
            <input type="submit" class="btn btn-dark text-center" value="Kayıt Ol" />
        </div>
    </form>
</div>